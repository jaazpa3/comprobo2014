<launch>
  <arg name="DEVICE" default="/dev/video0"/>
  <!-- The GStreamer framerate needs to be an integral fraction -->
  <arg name="FPS" default="30/1"/>

  <node pkg="nodelet" type="nodelet"
    name="standalone_nodelet" args="manager"
    output="screen"/>

  <node pkg="nodelet" type="nodelet"
    name="GSCamNodelet" 
    args="load gscam/GSCamNodelet standalone_nodelet" 
    output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
    <param name="gscam_config" value="tcpclientsrc host=192.168.16.51 port=5001 ! gdpdepay ! rtph264depay ! avdec_h264 ! videoconvert "/>
    <!--<param name="frame_id" value="/v4l_frame"/>
    <param name="sync_sink" value="true"/>-->
  </node>                 
</launch>
